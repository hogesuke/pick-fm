{
  "settings": {
    "analysis": {
      "analyzer": {
        "ngram_analyzer": {
          "tokenizer": "ngram_tokenizer",
          "filter": [ "greek_lowercase_filter" ]
        }
      },
      "tokenizer": {
        "ngram_tokenizer": {
          "type": "nGram",
          "min_gram": "2",
          "max_gram": "3",
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": {
        "greek_lowercase_filter": { "type": "lowercase", "language": "greek" }
      }
    }
  },
  "mappings": {
    "track": {
      "properties": {
        "id": {
          "type": "integer"
        },
        "program_id": {
          "type": "integer"
        },
        "episode_no": {
          "type": "integer"
        },
        "class": {
          "type": "string"
        },
        "tag_en": {
          "type": "string",
          "analyzer": "ngram_analyzer"
        },
        "tag_ja": {
          "type": "string",
          "analyzer": "ngram_analyzer"
        },
        "start_time": {
          "type": "integer"
        },
        "end_time": {
          "type": "integer"
        }
      }
    }
  }
}
